{
  "name": "bake-of-plan-windows",
  "productName": "Bake Of Plan",
  "version": "1.0.0",
  "description": "Desktop aplikacija za naƒçrtovanje peke",
  "main": "electron.js",
  "type": "module",
  "author": "Marek Bodynek",
  "private": true,
  "dependencies": {
    "lodash": "^4.17.21",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^7.1.12",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron-dev": "vite build && electron .",
    "dist": "vite build && electron-builder --win",
    "dist:dir": "vite build && electron-builder --win --dir"
  },
  "build": {
    "appId": "com.bakery.bakeofplan",
    "productName": "Bake Of Plan",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
